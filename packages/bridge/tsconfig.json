{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "isolatedModules": true
  },
  "include": [
    "src",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
